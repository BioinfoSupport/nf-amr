{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
	"$defs": { 
	    "genomic_params": { 
	      "title": "Genomic Sequence Parameters",
	      "type": "object",
	      "required": [], 
	      "properties": {

	        "samplesheet": { 
	          "type": "string",
	          "format": "file-path",
	          "pattern": "^\\S+\\.(csv)$",
	          "description": "Path to a CSV file containing the sample sheet. This parameter has precedence over input_assembly, long_reads and short_reads "
	        },
	      	
	        "input_assembly": { 
	          "type": "string",
	          "format": "file-path-pattern",
	          "pattern": "^\\S+\\.(fasta|fa)(\\.gz)?$",
	          "description": "Path to FASTA of the genomes to annotate. Only use if samplesheet is not set"
	        },
	      	
	        "org_name": {
	          "type": "string",
	          "description": "Force organism name"
	        }
	      }
	    },
	    
	    "assembly_params": {
	      "title": "Reads Assembly Parameters",
	      "type": "object",
	      "required": [], 
	      "properties": {
		    	"spades_short": {
		    		"type": "boolean",
		    		"default": false
		    	},
					"short_unicycler": {
						"type": "boolean",
						"default": false
		    	},
					"long_flye_medaka": {
						"type": "boolean",
						"default": false
		    	},
					"long_hybracter": {
						"type": "boolean",
						"default": false
		    	},
					"long_unicycler": {
						"type": "boolean",
						"default": false
		    	},
					"hybrid_hybracter": {
						"type": "boolean",
						"default": false
		    	},
					"hybrid_unicycler": {
						"type": "boolean",
						"default": false
		    	},
					"hybrid_flye_medaka_pilon": {
						"type": "boolean",
						"default": false
		    	}
	  		}
	    }
	  },
  "allOf": [
    { "$ref": "#/$defs/genomic_params" }, 
    { "$ref": "#/$defs/assembly_params" }
  ]
}
