{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
	"$defs": { 
	    "assembly_params": { 
	      "title": "Assembly parameters",
	      "type": "object",
	      "required": ["input"], 
	      "properties": {
	        "samplesheet": { 
	          "type": "string",
	          "format": "file-path"
	        },
	        "assembly_fasta": { 
	          "type": "string",
	          "format": "file-path"
	        },
	        "org_name": {
	          "type": "string"
	        }
	      }
	    }
	  },
  "allOf": [
    { "$ref": "#/$defs/assembly_params" } 
  ]
}
